# Database Configuration (Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/orderup?schema=public"

# Server Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration (Generate secure random strings)
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters-long-change-this"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-at-least-32-characters-long-change-this"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Optional Services (can be configured later)
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASS=""
# REDIS_URL=""

# File Upload Configuration
MAX_FILE_SIZE="5242880"
UPLOAD_PATH="./uploads"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
